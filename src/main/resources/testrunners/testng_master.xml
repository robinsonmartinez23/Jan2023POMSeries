<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="OpenCart Regression Suite_Master" verbose="4" thread-count="4" parallel="tests">

    <listeners>
        <listener
                class-name="com.qa.opencart.listeners.ExtentReportListener" />
        <listener
                class-name="com.qa.opencart.listeners.TestAllureListener" />
        <listener
                class-name="com.qa.opencart.listeners.AnnotationTransformer" />
    </listeners>

    <test name="Login Page Test_Chrome">
        <parameter name="browser" value="chrome"/>
        <parameter name="browserversion" value="114.0" />
        <classes>
            <class name="com.qa.opencart.tests.LoginPageTest" />
        </classes>
    </test>
    <test name="Login Page Test_Firefox">
        <parameter name="browser" value="firefox"/>
        <parameter name="browserversion" value="114.0" />
        <classes>
            <class name="com.qa.opencart.tests.LoginPageTest" />
        </classes>
    </test>
    <test name="Login Page Test_Edge">
        <parameter name="browser" value="edge"/>
        <parameter name="browserversion" value="114.0" />
        <classes>
            <class name="com.qa.opencart.tests.LoginPageTest" />
        </classes>
    </test>



    <test name="Accounts Page Test_Chrome">
        <parameter name="browser" value="chrome"/>
        <parameter name="browserversion" value="114.0" />
        <classes>
            <class name="com.qa.opencart.tests.AccountsPageTest" />
        </classes>
    </test>
    <test name="Accounts Page Test_Firefox">
        <parameter name="browser" value="firefox"/>
        <parameter name="browserversion" value="114.0" />
        <classes>
            <class name="com.qa.opencart.tests.AccountsPageTest" />
        </classes>
    </test>
    <test name="Accounts Page Test_Edge">
        <parameter name="browser" value="edge"/>
        <parameter name="browserversion" value="114.0" />
        <classes>
            <class name="com.qa.opencart.tests.AccountsPageTest" />
        </classes>
    </test>



    <test name="Search Test_Chrome">
        <parameter name="browser" value="chrome"/>
        <parameter name="browserversion" value="114.0" />
        <classes>
            <class name="com.qa.opencart.tests.SearchTest" />
        </classes>
    </test>
    <test name="Search Test_Firefox">
        <parameter name="browser" value="firefox"/>
        <parameter name="browserversion" value="114.0" />
        <classes>
            <class name="com.qa.opencart.tests.SearchTest" />
        </classes>
    </test>
    <test name="Search Test_Edge">
        <parameter name="browser" value="edge"/>
        <parameter name="browserversion" value="114.0" />
        <classes>
            <class name="com.qa.opencart.tests.SearchTest" />
        </classes>
    </test>



    <test name="Product Info Test_Chrome">
        <parameter name="browser" value="chrome"/>
        <parameter name="browserversion" value="114.0" />
        <classes>
            <class name="com.qa.opencart.tests.ProductInfoPageTest" />
        </classes>
    </test>
    <test name="Product Info Test_Firefox">
        <parameter name="browser" value="firefox"/>
        <parameter name="browserversion" value="114.0" />
        <classes>
            <class name="com.qa.opencart.tests.ProductInfoPageTest" />
        </classes>
    </test>
    <test name="Product Info Test_Edge">
        <parameter name="browser" value="edge"/>
        <parameter name="browserversion" value="114.0" />
        <classes>
            <class name="com.qa.opencart.tests.ProductInfoPageTest" />
        </classes>
    </test>


</suite>